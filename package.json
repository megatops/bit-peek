{
  "name": "bit-peek",
  "displayName": "Bit Peek",
  "description": "Display the binary and other forms of numbers in a very easy to read format.",
  "version": "0.0.2",
  "publisher": "dingzhaojie",
  "engines": {
    "vscode": "^1.40.0"
  },
  "license": "MIT",
  "keywords": [
    "address",
    "assembly",
    "binary",
    "bit",
    "convert",
    "converter",
    "decimal",
    "driver",
    "embedded",
    "hex",
    "hover",
    "inspector",
    "kernel",
    "peek",
    "register"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/megatops/bit-peek.git"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.drawio.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Bit Peek",
      "properties": {
        "bit-peek.registerView": {
          "type": "boolean",
          "default": true,
          "description": "Display bits in register friendly view."
        },
        "bit-peek.msb0": {
          "type": "boolean",
          "default": false,
          "description": "Use MSB0 bit numbering (Motorola style)."
        },
        "bit-peek.forceHex": {
          "type": "boolean",
          "default": false,
          "description": "Enable force HEX mode by default."
        }
      }
    },
    "commands": [
      {
        "command": "bit-peek.forceHex",
        "title": "Toggle force HEX mode",
        "category": "Bit Peek"
      }
    ],
    "languages": [
      {
        "id": "bit-peek"
      }
    ],
    "grammars": [
      {
        "language": "bit-peek",
        "scopeName": "source.bit-peek",
        "path": "./syntax/bit-peek.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.40.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
